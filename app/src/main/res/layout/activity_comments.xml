<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentsActivity">

    <include
        android:id="@+id/comments_page_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_below="@id/comments_page_toolbar"
        android:src="@drawable/background_watercolour" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cyan_800_overlay"
        android:layout_below="@id/comments_page_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/comments_page_toolbar"></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/comment_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inputs"
            android:padding="15dp"
            android:layout_margin="7dp"
            android:hint="Write a comment here..."
            android:layout_toLeftOf="@id/post_comment_btn"
            android:inputType="textMultiLine"/>

        <ImageButton
            android:id="@+id/post_comment_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:padding="15dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/post_comment"/>
    </RelativeLayout>
</RelativeLayout>