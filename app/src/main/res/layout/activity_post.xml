<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".PostActivity">

    <include
        android:id="@+id/update_post_page_toolbar"
        layout="@layout/app_bar_layout"/>


    <ScrollView
        android:id="@+id/post_scroll_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/update_post_page_toolbar"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/post_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/select_post_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/select_image" />

            <EditText
                android:id="@+id/post_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_post_image"
                android:layout_marginStart="4dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/inputs"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Summary about your post..."
                android:inputType="textMultiLine"
                android:padding="15dp" />

            <Button
                android:id="@+id/update_post_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_summary"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/buttons"
                android:padding="10dp"
                android:text="Update Post" />

            <LinearLayout
                android:layout_below="@id/update_post_button"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <net.dankito.richtexteditor.android.toolbar.GroupedCommandsEditorToolbar
                    android:id="@+id/editorToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/colorPrimary"
                    />

                <net.dankito.richtexteditor.android.RichTextEditor
                    android:id="@+id/editor"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scrollbars="vertical"
                    android:layout_weight="10"
                    />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>